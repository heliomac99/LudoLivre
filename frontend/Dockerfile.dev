# Dockerfile.dev - Frontend Vue 3 + Vite + pnpm + Bootstrap

# Build stage
FROM node:22.1.0 AS build

# Diretório de trabalho
WORKDIR /app

# Instala pnpm globalmente
RUN npm install -g pnpm

# Copia arquivos de dependência primeiro
COPY package.json pnpm-lock.yaml ./

# Instala dependências
RUN pnpm install --no-frozen-lockfile

# Copia o restante do projeto
COPY . .

# Build da aplicação com variáveis de ambiente
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}
RUN pnpm run build

# Production stage
FROM nginx:alpine AS production

# Copia os arquivos buildados para o nginx
COPY --from=build /app/dist /usr/share/nginx/html

# Copia configuração customizada do nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expõe a porta 80
EXPOSE 80

# Comando padrão
CMD ["nginx", "-g", "daemon off;"]

# Development stage (mantém o original para desenvolvimento)
FROM node:22.1.0 AS development

# Diretório de trabalho
WORKDIR /app

# Instala pnpm globalmente
RUN npm install -g pnpm

# Copia arquivos de dependência primeiro
COPY package.json pnpm-lock.yaml ./

# Instala dependências
RUN pnpm install --no-frozen-lockfile

# Copia o restante do projeto
COPY . .

# Expõe a porta do Vite (3000 padrão)
EXPOSE 3000

# Comando padrão para desenvolvimento
CMD ["pnpm", "run", "dev", "--host", "0.0.0.0"]
